<h1>Campaign Creator Awesome Login Screen</h1>

<form role="form">
  <div class="form-group">
    <label for="email">Email address</label>
    {{input type="email" class="form-control" id="email" placeholder="Enter email" value=email}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input type="password" class="form-control" id="password" placeholder="Password" value=password}}
  </div>
   <button type="submit" class="btn btn-default" {{action 'login'}}>Login</button>
  <button type="submit" class="btn btn-default" {{action 'loginFacebook'}}>Login with Facebook</button>
  <button type="submit" class="btn btn-default" {{action 'logout'}}>Logout</button>
</form>