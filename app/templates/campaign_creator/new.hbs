
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">MEDIA</h3>
      </div>
      <div class="panel-body">
        <p>Background Image (800 x 800px)</p>
        {{input type="file" value=backgroundImg}}
        <p>Hero Image (800 x 300px)</p>
        {{input type="file" value=heroImg}}
        <div class="btn-group">
          <button type="button" class="btn btn-default">Left</button>
          <button type="button" class="btn btn-default">Middle</button>
          <button type="button" class="btn btn-default">Right</button>
        </div>
        <p>App Icon (50 x 50px)</p>
         {{input type="file" value=appIcon}}
        <p>Share Icon (50 x 50px)</p>
         {{input type="file" value=shareIcon}}
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <form role="form">
          <h1>NAME OF SWEEPSTAKES</h1>
          <div class="form-group">
            <label class="sr-only" for="{{description}}">{{description}}</label>
            {{textarea class="form-control" placeholder="Something here" value=description}}
          </div>
          <div class="form-group">
            <label class="sr-only" for="{{textField1}}">{{textField1}}</label>
            {{input type="text" class="form-control" placeholder="Text Value here" value=textField1}}
          </div>
          <div class="form-group">
            <label class="sr-only" for="{{textField2}}">{{textField2}}</label>
            {{input type="text" class="form-control" placeholder="Text Value here" value=textField2}}
          </div>
          <div class="form-group">
            <label class="sr-only" for="{{textField3}}">{{textField3}}</label>
            {{input type="text" class="form-control" placeholder="Text value here" value=textField3}}
          </div>
          <div class="form-group">
            <label class="sr-only" for="{{textField4}}">{{textField4}}</label>
            {{input type="text" class="form-control" placeholder="Text value here" value=textField4}}
          </div>
          <div class="form-group">
            <label class="sr-only" for="{{textArea1}}">{{textArea1}}</label>
            {{textarea class="form-control" placeholder="Text value here" value=textArea1}}
          </div>
          <button type="submit" class="btn btn-default" {{action "submit"}}>Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>