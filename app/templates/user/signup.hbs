<form role="form">
  <div class="form-group">
    <label class="sr-only" for="name">Name</label>
    {{input type="text" class="form-control" id="nameInput" placeholder="Enter full name" value=name}}
  </div>
  <div class="form-group">
    <label class="sr-only" for="email">Email address</label>
    {{input type="email" class="form-control" id="emailInput" placeholder="Enter email" value=email}}
  </div>
  <div class="form-group">
    <label class="sr-only" for="password">Password</label>
    {{input type="password" class="form-control" id="passwordInput" placeholder="Enter a Password" value=password}}
  </div>
  <div class="form-group">
    <label class="sr-only" for="conf_password">Password</label>
    {{input type="password" class="form-control" id="conf_password" placeholder="Please re-enter password"}}
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> By clicking here you agree to our Terms & Conditions
    </label>
  </div>
  <button type="submit" class="btn btn-default" {{action 'createAccount'}}>Sign Up</button>
</form>